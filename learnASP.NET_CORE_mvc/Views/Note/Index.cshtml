@model IEnumerable<Note>
@{
    ViewData["Title"] = "Note";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Notes list</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-outline-primary" asp-controller="Note" asp-action="Create">
             <i class="bi bi-plus-circle"></i> &nbsp;Create new note 
            </a>
        </div>
    </div>
</div>
